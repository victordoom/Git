@model WebAdmin.Models.OpportunitiesDetails

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    List<SelectListItem>
          listItems2 = new List<SelectListItem>
              ();
    listItems2.Add(new SelectListItem
    {
        Text = "In Proccess",
        Value = "In Proccess",
        Selected = true

    });
    listItems2.Add(new SelectListItem
    {
        Text = "Closed",
        Value = "Closed"
    });

    List<SelectListItem>
        listItems = new List<SelectListItem>
            ();
    listItems.Add(new SelectListItem
    {
        Text = "Yes",
        Value = "1"
    });
    listItems.Add(new SelectListItem
    {
        Text = "No",
        Value = "0",
        Selected = true
    });
}

<br />


<div class="row col-md-12">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Follow up - Registration</h3>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <form asp-action="CreateOpportunitiesDetails">

                        @Html.HiddenFor(model => model.OpportunitiesID)

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="form-group">
                            <label asp-for="UserID" class="control-label"></label>
                            @*<input asp-for="OpenedBy" class="form-control" />*@
                            <select asp-for="UserID" class="form-control" asp-items="ViewBag.OpenedBy" disabled="disabled"></select>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VisitDate" class="control-label"></label>
                            <input asp-for="VisitDate" class="form-control" />
                            <span asp-validation-for="VisitDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comment" class="control-label"></label>
                            @Html.TextAreaFor(m => m.Comment, new { @class = "form-control" })
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NextVisitDate" class="control-label"></label>
                            <input asp-for="NextVisitDate" class="form-control" />
                            <span asp-validation-for="NextVisitDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            @Html.DropDownListFor(model => model.Status, listItems2, "-- Select Status --", htmlAttributes: new { @class = "form-control" })
                            @*<input asp-for="Status" class="form-control" />*@
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EmailNotification" class="control-label"></label>
                            @Html.DropDownListFor(model => model.EmailNotification, listItems, "-- Select Status --", htmlAttributes: new { @class = "form-control" })
                            <span asp-validation-for="EmailNotification" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

<div>
    <a asp-action="Index" class="btn btn-default"> <span class="glyphicon glyphicon-arrow-left"></span> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
