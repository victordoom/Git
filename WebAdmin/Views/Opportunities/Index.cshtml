                        <label class=" col-lg-4 control-label">Reason</label>
                        <div class="col-lg-8">


                            <select id="SelectReasonFilter" name="SelectReason" class="form-control dropdown-toggle" asp-items="ViewBag.ClosingReason" style="width:80%;"></select>




